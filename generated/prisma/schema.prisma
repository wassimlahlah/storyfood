generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String    @id @default(cuid())
  createdAi DateTime  @default(now())
  title     String
  desc      String
  color     String
  img       String
  slug      String    @unique
  products  Product[]
}

model Product {
  id         String   @id @default(cuid())
  createdAi  DateTime @default(now())
  title      String
  desc       String
  color      String
  img        String?
  price      Decimal
  isFeatured Boolean  @default(false)
  option     Json[]
  Category   Category @relation(fields: [catSlug], references: [slug])
  catSlug    String
}

model Order {
  id        String   @id @default(cuid())
  createdAi DateTime @default(now())
  price     Decimal
  products  Json[]
  status    String
  intent_id String?  @unique
}
